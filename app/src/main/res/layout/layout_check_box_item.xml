<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardCornerRadius="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_width="wrap_content"
            android:text="Chill 20"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:theme="@style/ProgressTheme"
            android:id="@+id/coupon_check_box__"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/raleway_"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/coupon_check_box__"
            android:textSize="18sp"
            android:id="@+id/coupon_description"
            android:layout_marginStart="35sp"
            android:layout_marginBottom="5sp"
            android:text="Free 30% off"
            android:fontFamily="@font/raleway_"
            android:textColor="#000"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:fontFamily="@font/raleway_"
        android:textColor="#f76008"
        android:layout_margin="10dp"
        android:visibility="invisible"
        android:id="@+id/coupon_id__"
        android:text="Coupon ID: #2"
        android:textAlignment="viewEnd"
        android:layout_height="wrap_content" />

</android.support.v7.widget.CardView>