<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CouponsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:textSize="22sp"
            android:id="@+id/selectYourCouponsText"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/raleway_"
            android:text="Select your Coupons"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_margin="5sp"
            android:id="@+id/checkboxes_recyclerView"
            android:layout_below="@+id/selectYourCouponsText"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:text="Update Coupons"
        android:id="@+id/updateCoupons"
        android:layout_gravity="bottom|end"
        android:layout_margin="5dp"
        android:layout_height="wrap_content" />

</android.support.design.widget.CoordinatorLayout>